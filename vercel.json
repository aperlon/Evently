{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": ".dist",
        "buildCommand": "cd frontend && npm install && npm run build && cd .. && mkdir -p .dist && cp -r frontend/dist/* .dist/"
      }
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot))",
      "dest": "/.dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/.dist/index.html"
    }
  ]
}
